{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<div class="login-form">
    <form action="{{ path('app_login') }}" method="post"  class="form-inline">
        <div class="form-group row">
            <div class="col-sm-4">
                <label class="sr-only" for="username">Nom d'utilisateur :</label>
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Nom d'utilisateur" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                <label class="sr-only" for="password">Mot de passe :</label>
                <input type="password" class="form-control" id="password" name="_password" placeholder="Mot de passe"/>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>
        <button class="btn btn-success" type="submit">Se connecter</button>
    </form>
</div>

{% endblock %}
